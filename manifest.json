{
  "manifest_version": 3,
  "name": "AI Content Screener",
  "description": "検索結果にAI生成っぽさスコアを表示します。",
  "version": "0.1.1",
  "icons": {
    "16": "icon/icon16.png",
    "32": "icon/icon32.png",
    "48": "icon/icon48.png",
    "128": "icon/icon.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://*/*"
  ],
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.google.com/*",
        "https://www.google.co.jp/*"
      ],
      "js": [
        "src/content/hash-model.js",
        "src/content/hash-model-ja.js",
        "src/content/main.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "options_page": "src/options/options.html"
}
